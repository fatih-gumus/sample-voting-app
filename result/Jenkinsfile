pipeline {
    agent any

    tools {
        nodejs "NodeJS 22.4.0"
    }
    stages {
        stage("Build") {
            when {
                changeset "**/result/**"
            }
            steps {
                echo "Compiling result app"
                dir("result") {
                    sh 'npm install'
                }
            }
        }

        stage("Test") {
            when {
                changeset "**/result/**"
            }
            steps {
                echo "Testing result app"
                dir("result") {
                    sh 'npm install && npm test'
                }
            }
        }
    }
}